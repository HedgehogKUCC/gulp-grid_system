{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["dist/js/**/*.js", "src/js/plugins/*.js"],
    "rules": {
        "no-debugger": "off",
        "object-curly-newline": ["error", {
            "ImportDeclaration": "never"
        }],
        "max-len": ["error", {
            "code": 150
        }],
        "indent": ["error", 4],
        "no-use-before-define": ["error", { "functions": false }]
    }
}
